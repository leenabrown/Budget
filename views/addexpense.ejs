<!DOCTYPE html>
<html>
	<head>
	  <title> My Budget </title>
	  <title> My Budget </title>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
	</head>
	<style type="text/css">
		body {
			padding-top: 40px;
			padding-bottom: 40px;
			background-color:white;
		}
		.shift {
			margin-left: 65px;
		}
	</style>
	<body>
		<div class="container">
			<div css="text-align:center">
				<div css="text-align:center">
					<form action='/addexpense' method="post">
						<div >
					        <label>Amount:</label> <input min = "0.00" step="0.01" value="0.00" type="number" name="amount" placeholder="Enter Amount" class="form-control" >	
					        <br/>
				        </div>
				        <div>
					        <label>Merchant:</label> <input type="text" id="label" placeholder="Name" class="form-control" name="labelGiving">
					        <br/>
					    </div>
					    <div>
					    	<label >Choose a Budget Item</label>
						    <select required="required" class="form-control" name= "item" id="budgetItem">
								<option value="">Budget Item</option>

						    	<% giving.forEach( (giving) => { %>
						    		<option><%=giving.label%></option>
						    	<% }); %>
								<div class="dropdown-divider"></div>
						    	<% savings.forEach( (savings) => { %>
						    		<option><%=savings.label%></option>
						    	<% }); %>
						    	<div class="dropdown-divider"></div>
						    	<% housing.forEach( (housing) => { %>
						    		<option><%=housing.label%></option>
						    	<% }); %>
						    	<div class="dropdown-divider"></div>
						    	<% transportation.forEach( (transportation) => { %>
						    		<option><%=transportation.label%></option>
						    	<% }); %>
						    	<div class="dropdown-divider"></div>
						    	<% food.forEach( (food) => { %>
						    		<option><%=food.label%></option>
						    	<% }); %>
						    	<div class="dropdown-divider"></div>
						    	<% lifestyle.forEach( (lifestyle) => { %>
						    		<option><%=lifestyle.label%></option>
						    	<% }); %>
						    	<div class="dropdown-divider"></div>
						    	<% insurance.forEach( (insurance) => { %>
						    		<option><%=insurance.label%></option>
						    	<% }); %>
						    	<div class="dropdown-divider"></div>
						    	<% debt.forEach( (debt) => { %>
						    		<option><%=debt.label%></option>
						    	<% }); %>
	      
						    </select>
						</div>
					    <br/>			        
				        <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
				    </form>
				</div>
			</div>
		</div>	
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>     
	</body>
</html>
